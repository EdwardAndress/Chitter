<form id="sign_in_form" action="/user/sign_in" method="post">
	Email:		<input type="text" name="email">
	Password:	<input type="password" name="password">
				<input type="submit" value="Sign in">
</form>

<form id="join" action="/user/new" method="get">
	Join the Chitterati:<input type="submit" value="Sign up">
</form>

<form id="filter_tags" method="post">
	Chitterati thoughts on: <input type="text" name="filter">
	<input type="submit" value="Filter">
</form>

<ul>
	<% @posts.each do |post| %>
	<li id="post"><%= post.message %></li>
	<% end %>
</ul>